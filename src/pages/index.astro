<style>
	body {
		font-family: 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
		background: linear-gradient(to right, #ffcccc, #ffe6e6);
		text-align: center;
		padding: 50px;
		margin: 0;
	}

	.container {
		border: 2px solid #ff9999;
		padding: 20px;
		border-radius: 15px;
		background: #fff;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		max-width: 600px;
		margin: 20px auto;
		display: none;
	}

	.container img {
		max-width: 100%;
		height: auto;
		border-radius: 10px;
		margin-bottom: 15px;
	}

	button {
		background: #ff6666;
		color: white;
		padding: 10px 20px;
		border: none;
		border-radius: 5px;
		cursor: pointer;
		margin: 10px;
		font-size: 16px;
		transition: background 0.3s;
	}

	button:hover {
		background: #ff3333;
	}

	.show {
		display: block !important;
	}

	h1, h2 {
		color: #cc0000;
	}

	p {
		font-size: 18px;
		color: #666;
	}
</style>
